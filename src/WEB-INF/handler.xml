<?xml version="1.0" encoding="ISO-8859-1"?>
<handlers xmlns="http://www.appserver.io/appserver">

    <display-name>Simple Web Socket Example</display-name>
    <description>Simple Web Socket Example</description>

    <handler>
        <description><![CDATA[Handler to handle sample entities.]]></description>
        <display-name>SampleHandler</display-name>
        <handler-name>SampleHandler</handler-name>
        <handler-class>\AppserverIo\Apps\Example\Handlers\SampleHandler</handler-class>
    </handler>

    <handler>
        <description><![CDATA[Handler to handle user entities.]]></description>
        <display-name>UserHandler</display-name>
        <handler-name>UserHandler</handler-name>
        <handler-class>\AppserverIo\Apps\Example\Handlers\UserHandler</handler-class>
    </handler>

    <handler-mapping>
        <handler-name>SampleHandler</handler-name>
        <url-pattern>/sample</url-pattern>
    </handler-mapping>

    <handler-mapping>
        <handler-name>UserHandler</handler-name>
        <url-pattern>/user</url-pattern>
    </handler-mapping>

</handlers>